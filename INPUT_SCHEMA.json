{
    "title": "Jobs.ch SERP Scraper Input",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "keyword": {
            "title": "Search Keyword",
            "type": "string",
            "description": "The keyword to search for (e.g. 'Recruiter')",
            "editor": "textfield",
            "default": "Recruiter"
        },
        "sortBy": {
            "title": "Sort By",
            "type": "string",
            "description": "How to sort the results",
            "editor": "textfield",
            "default": "date"
        },
        "publicationDate": {
            "title": "Publication Date",
            "type": "string",
            "description": "Filter by publication date (e.g. '1' for last 24h)",
            "editor": "textfield",
            "default": "1"
        },
        "page": {
            "title": "Start Page",
            "type": "integer",
            "description": "Starting page number",
            "editor": "number",
            "minimum": 1,
            "default": 1
        },
        "maxPages": {
            "title": "Maximum Pages",
            "type": "integer",
            "description": "Maximum number of pages to scrape",
            "editor": "number",
            "minimum": 1,
            "maximum": 100,
            "default": 5
        },
        "relevantTitles": {
            "title": "Relevant Job Titles",
            "type": "array",
            "description": "List of relevant job titles to filter for",
            "editor": "stringList",
            "default": [
                "recruiter",
                "recruiting",
                "talent acquisition",
                "personalberater",
                "headhunter",
                "hr business partner",
                "Stellenvermittlung",
                "hr",
                "personalberatung",
                "payroll"
            ]
        },
        "location": {
            "title": "Location",
            "type": "string",
            "description": "Location to filter jobs by",
            "editor": "textfield",
            "default": ""
        },
        "categories": {
            "title": "Categories",
            "type": "array",
            "description": "Job categories to filter by",
            "editor": "stringList",
            "default": ["100", "104", "105"]
        }
    },
    "required": []
} 